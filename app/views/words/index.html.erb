<p id="notice"><%= notice %></p>

<h1>Sanat</h1>

<table>
  <thead>
    <tr>
      <th>Englanti</th>
      <th>Suomi</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= link_to word.english, word %></td>
        <td><%= word.finnish %></td>
        <td><%= link_to '<muokkaa>', edit_word_path(word) %></td>
        <td><%= link_to '<poista>', word, method: :delete, data: { confirm: 'Oletko varma?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Haku</h2>

<%= form_tag words_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Hae", :name => nil %>
  </p>
<% end %>



